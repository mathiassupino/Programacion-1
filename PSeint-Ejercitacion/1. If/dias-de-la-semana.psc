Proceso diaDeLaSemana
	Definir num Como Entero;
	num = 0;
	Escribir 'Escriba el numero del día de la semana';
	Leer num;
	Segun num Hacer
		Caso 1:
			Escribir "Lunes";
		Caso 2:
			Escribir 'Martes';
		Caso 3:
			Escribir 'Miércoles';
		Caso 4:
			Escribir 'Jueves';
		Caso 5:
			Escribir 'Viernes';
		Caso 6:
			Escribir 'Sábado';
		Caso 7:
			Escribir 'Domingo';
		De Otro Modo:
			Escribir 'El numero no se corresponde a ningún día de la semana.';
	FinSegun
FinProceso
